<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/alert_exit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/alert_exit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Are you sure want to exit? The entered data will be lost" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alert_exit_new_photo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Exit"
            android:textColor="@color/pinky" />

        <TextView
            android:id="@+id/alert_exitNew_photo_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/pinky" />
    </LinearLayout>
</LinearLayout>